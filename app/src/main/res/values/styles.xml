<resources xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="btn_for_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn</item>
    </style>

    <style name="base_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingEnd">25dp</item>
    </style>

    <style name="text_for_question" parent="base_style">
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:background">@drawable/text_question</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="text_for_question_element" parent="base_style">
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:background">@drawable/text_question</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="text_for_answer" parent="base_style">
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start</item>
        <item name="android:background">@drawable/text_answer</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="text_for_answer_num" parent="base_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start</item>
        <item name="android:background">@drawable/text_question</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="text_for_finish" parent="base_style">
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/text_answer</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>