<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fon"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_question"
            style="@style/text_for_question"
            android:text="@string/start_test_btn"
            android:textSize="20sp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_answer_a_num"
                    style="@style/text_for_answer_num"
                    android:text="@string/answer_a"
                    android:textSize="20sp"/>

                <Button
                    android:id="@+id/text_answer_a"
                    style="@style/text_for_answer"
                    android:text="@string/start_test_btn"
                    android:textSize="20sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_answer_b_num"
                    style="@style/text_for_answer_num"
                    android:text="@string/answer_b"
                    android:textSize="20sp"/>

                <Button
                    android:id="@+id/text_answer_b"
                    style="@style/text_for_answer"
                    android:text="@string/start_test_btn"
                    android:textSize="20sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_answer_c_num"
                    style="@style/text_for_answer_num"
                    android:text="@string/answer_c"
                    android:textSize="20sp"/>

                <Button
                    android:id="@+id/text_answer_c"
                    style="@style/text_for_answer"
                    android:text="@string/start_test_btn"
                    android:textSize="20sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_answer_d_num"
                    style="@style/text_for_answer_num"
                    android:text="@string/answer_d"
                    android:textSize="20sp"/>

                <Button
                    android:id="@+id/text_answer_d"
                    style="@style/text_for_answer"
                    android:text="@string/start_test_btn"
                    android:textSize="20sp"/>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
